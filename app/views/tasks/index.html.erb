<h1>Tasks list</h1>
<%= link_to "new", new_task_path %>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.name, task_path(task.id) %>
      <%= link_to 'update', edit_task_path(task.id) %>
      <%= link_to 'delete', task_path(task), method: :delete,
      data: {confirm: "Sure you want to delete #{task.name}"} %>
    </li>
  <% end %>
</ul>
